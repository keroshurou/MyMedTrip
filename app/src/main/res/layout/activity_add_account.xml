<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddAccount">

<!--    <ImageView-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginStart="20dp"-->
<!--        android:src="@drawable/arrow_back_btn"-->
<!--        app:tint="@color/darkGreen"/>-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/inter"
        android:text="Add New Admin Account"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/usernameAcc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:background="@drawable/edt_column"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Username"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordAcc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/usernameAcc"
        android:background="@drawable/edt_column"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordAccRe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/passwordAcc"
        android:background="@drawable/edt_column"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Retype Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/staffName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/passwordAccRe"
        android:background="@drawable/edt_column"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Staff Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/staffNo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/staffName"
        android:background="@drawable/edt_column"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Staff No"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addBtnAcc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/staffNo"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/green_button"
        android:text="Insert" />

</RelativeLayout>