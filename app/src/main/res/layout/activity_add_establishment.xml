<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddEstablishment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/arrow_back_btn"
                app:tint="@color/darkGreen"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="76dp"
                android:layout_marginEnd="70dp"
                android:textSize="20sp"
                android:text="Add New Hospital/Clinic"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"/>

            <TextView
                android:id="@+id/txtVw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_marginTop="12dp"
                android:layout_marginStart="76dp"
                android:layout_marginEnd="70dp"
                android:textSize="14sp"
                android:text="Type :"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"/>


            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txtVw"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:layout_centerVertical="true"
                android:background="@drawable/spinner_style"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/establishmentName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/spinnerType"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/establishmentName"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Address"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtVw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="76dp"
                android:layout_marginEnd="70dp"
                android:layout_below="@+id/address"
                android:textSize="14sp"
                android:text="Operating Hours: "
                android:textColor="@color/black"
                android:fontFamily="@font/inter"/>

            <TextView
                android:id="@+id/txtVw3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginEnd="70dp"
                android:layout_below="@+id/txtVw2"
                android:textSize="14sp"
                android:text="Please Separate if have 2 different times."
                android:textColor="@color/black"
                android:fontFamily="@font/inter"/>

            <EditText
                android:id="@+id/days"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/txtVw3"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Days 1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/days"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Hours 1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/days2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/hours"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Days 2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/hours2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/days2"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Hours 2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/hours2"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="City"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtVw4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/city"
                android:textSize="14sp"
                android:text="Tagging"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"/>

            <EditText
                android:id="@+id/tag1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/txtVw4"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Tag 1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tag2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tag1"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Tag 2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tag3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tag2"
                android:background="@drawable/edt_column"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Tag 3"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tag3"
                android:layout_marginTop="20dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/green_button"
                android:text="Insert" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/addBtn"/>

        </RelativeLayout>

    </ScrollView>

