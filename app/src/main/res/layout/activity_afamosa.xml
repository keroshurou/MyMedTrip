<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Afamosa">

    <TextView
        android:id="@+id/txtVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Ruins of A'Famosa"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingBottom="6dp"
        android:background="@drawable/search_bar"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVw"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/afamosa"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/image">

            <TextView
                android:id="@+id/txtVw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:fontFamily="@font/inter"
                android:textSize="30sp"
                android:textColor="@color/darkGrey"/>

            <TextView
                android:id="@+id/txtVw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Among"
                android:fontFamily="@font/inter"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/txtVw2"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/txtVw4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Things To Do in Melaka"
                android:fontFamily="@font/inter"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/txtVw3"
                android:textColor="@color/blue"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtVw5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A'Famosa, Melaka Overview"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/rl"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtVw6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/afamosap1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"
            android:layout_below="@+id/txtVw5"
            android:layout_marginTop="10dp"
            android:justificationMode="inter_word" />

        <TextView
            android:id="@+id/txtVw7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/afamosap2"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"
            android:layout_below="@+id/txtVw6"
            android:layout_marginTop="10dp"
            android:justificationMode="inter_word" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookAttr"
        android:layout_below="@+id/layout"
        android:paddingStart="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/question_design">

        <TextView
            android:id="@+id/busText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:text="Save/Book Attraction"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/busMark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_navigate_next_24"
            android:backgroundTint="@color/darkGreen"/>

    </RelativeLayout>

</RelativeLayout>