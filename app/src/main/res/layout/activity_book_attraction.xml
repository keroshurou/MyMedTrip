<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookAttraction">

    <TextView
        android:id="@+id/txtVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save/Book Attractions"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingBottom="6dp"
        android:background="@drawable/search_bar"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txtVw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw"
        android:layout_marginTop="20dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="70dp"
        android:textSize="14sp"
        android:text="Select Attractions :"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"/>


    <Spinner
        android:id="@+id/selectAttr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txtVw2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/spinner_style"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/txtVw3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectAttr"
        android:layout_marginTop="12dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="70dp"
        android:textSize="14sp"
        android:text="Time :"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txtVw3"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/inter"
        android:hint="HH:MM"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@drawable/edt_column"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtVw4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/inter"
        android:text="Date : "
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txtVw4"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/inter"
        android:hint="DD/MM/YYYY"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@drawable/edt_column"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tickets"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/date"
        android:background="@drawable/edt_column"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Total Tickets"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

