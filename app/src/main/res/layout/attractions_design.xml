        <!--        </androidx.cardview.widget.CardView>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attrName"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:text="Attractions"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/attrDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:fontFamily="@font/inter"
                android:text="DD/MM/YYYY"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrDate"
                android:fontFamily="@font/inter"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/attrTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:fontFamily="@font/inter"
                android:text="HH:MM AM"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrTime"
                android:fontFamily="@font/inter"
                android:text="No of Tickets"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/attrTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:fontFamily="@font/inter"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/bar"
            android:layout_below="@+id/rl"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bar"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangeStatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_change_circle_24"
            android:backgroundTint="@color/darkGreen"
            android:layout_below="@id/bar"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            android:layout_below="@+id/btnChangeStatus"/>

    </RelativeLayout>

</RelativeLayout>